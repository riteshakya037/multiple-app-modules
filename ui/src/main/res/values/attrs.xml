<?xml version="1.0" encoding="utf-8"?>
<resources>
    <attr name="status" format="enum">
        <enum name="none" value="0" />
        <enum name="success" value="1" />
        <enum name="error" value="2" />
    </attr>
    <declare-styleable name="PhoneInput">
        <attr name="android:hint" format="string" />
        <attr name="status" />
    </declare-styleable>
    <declare-styleable name="TextInput">
        <attr name="android:hint" format="string" />
        <attr name="android:imeOptions" format="integer" />
        <attr name="password" format="boolean" />
        <attr name="android:maxLength" format="integer" />
        <attr name="android:inputType" format="integer" />
        <attr name="status" />
    </declare-styleable>
    <declare-styleable name="SelectInput">
        <attr name="android:hint" format="string" />
        <attr name="status" />
    </declare-styleable>
    <declare-styleable name="DoubleSidedSwitch">
        <attr name="android:text" format="string" />
        <attr name="android:textOn" format="string" />
        <attr name="android:textOff" format="string" />

    </declare-styleable>
    <declare-styleable name="CustomSpinner">
        <attr name="android:entries" format="reference"/>
        <attr name="selectedTextAppearance" format="reference"/>
    </declare-styleable>
    <declare-styleable name="PasswordView">
        <attr name="length" format="integer" />
        <attr name="android:inputType" />
    </declare-styleable>
    <declare-styleable name="WelcomeView">
        <attr name="android:title" format="string" />
        <attr name="android:subtitle" format="string" />
        <attr name="android:src" format="reference" />
        <attr name="showBadge" format="boolean" />
        <attr name="badgeText" format="string" />

    </declare-styleable>
</resources>