<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextAppearance">
        <item name="android:textColor">@color/colorTextLight</item>
    </style>

    <style name="TextAppearance.Montserrat" parent="TextAppearance">
        <item name="android:fontFamily">@font/montserrat_regular</item>
    </style>

    <style name="TextAppearance.Montserrat.SemiBold" parent="TextAppearance.Montserrat">
        <item name="android:fontFamily">@font/montserrat_semibold</item>
    </style>

    <style name="TextAppearance.Montserrat.Bold" parent="TextAppearance.Montserrat">
        <item name="android:fontFamily">@font/montserrat_bold</item>
    </style>

    <style name="TextAppearance.Montserrat.Medium" parent="TextAppearance.Montserrat">
        <item name="android:fontFamily">@font/montserrat_medium</item>
    </style>

    <style name="TextAppearance.Title" parent="TextAppearance.Montserrat.SemiBold">
        <item name="android:textSize">70sp</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="TextAppearance.SignUp.Title" parent="TextAppearance.Montserrat.SemiBold">
        <item name="android:textSize">26sp</item>
        <item name="android:textColor">@color/colorTextDark</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="TextAppearance.SignUp.SubTitle" parent="TextAppearance.Montserrat.SemiBold">
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@color/colorTextDark</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="TextAppearance.SubTitle" parent="TextAppearance.Title">
        <item name="android:textSize">35sp</item>
    </style>

    <style name="TextAppearance.Button.Outline" parent="TextAppearance.Montserrat.SemiBold">
        <item name="android:textSize">44sp</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="TextAppearance.Button.Outline.Small" parent="TextAppearance.Montserrat.Bold">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/colorTextDark</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="TextAppearance.Button.Bottom" parent="TextAppearance.Montserrat.SemiBold">
        <item name="android:textSize">18sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="TextAppearance.Switch.Text" parent="TextAppearance.Montserrat.SemiBold">
        <item name="android:textSize">18sp</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textColor">@color/colorTextDark</item>
    </style>

    <style name="TextAppearance.Switch.Status" parent="TextAppearance.Montserrat.SemiBold">
        <item name="android:textSize">12sp</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/colorTextDark</item>
    </style>

    <style name="TextAppearance.TabLayout.Text" parent="TextAppearance.Montserrat.SemiBold">
        <item name="android:textSize">20sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/colorTextDark</item>
    </style>

    <style name="TextAppearance.Button" parent="TextAppearance.Montserrat.SemiBold">
        <item name="android:textSize">23sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="TextAppearance.TextInput.Hint" parent="TextAppearance.Montserrat.SemiBold">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TextAppearance.Footer" parent="TextAppearance.Montserrat.SemiBold">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/colorTextDark</item>
    </style>

    <style name="TextAppearance.TextInput.Text" parent="TextAppearance.Montserrat.SemiBold">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/colorTextDark</item>
    </style>

    <style name="TextAppearance.Spinner.Small" parent="TextAppearance.Montserrat.SemiBold">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/colorTextDark</item>
    </style>

    <style name="TextAppearance.Welcome.Title" parent="TextAppearance.Montserrat.Bold">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/colorTextDark</item>
    </style>

    <style name="TextAppearance.Welcome.Subtitle" parent="TextAppearance.Montserrat.SemiBold">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/colorTextDark</item>
    </style>

    <style name="TextAppearance.Welcome.Badge" parent="TextAppearance.Montserrat.Bold">
        <item name="android:textSize">8sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="TextAppearance.Welcome.Badge.Light" parent="TextAppearance.Montserrat.Bold">
        <item name="android:textSize">12sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <style name="TextAppearance.BottomSheet.Button" parent="TextAppearance.Montserrat.Medium">
        <item name="android:textAllCaps">true</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
    </style>
</resources>