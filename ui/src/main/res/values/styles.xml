<resources>

    <!-- Base application theme. -->
    <style name="CoreAppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="Widget.Button.OutlinedButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">70dp</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:textAppearance">@style/TextAppearance.Button.Outline</item>
        <item name="android:textColor">@color/colorTextLight</item>
        <item name="android:elevation">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:lineSpacingExtra">3sp</item>
        <item name="strokeColor">@color/colorTextLight</item>
        <item name="cornerRadius">0dp</item>
        <item name="strokeWidth">1dp</item>
        <item name="rippleColor">@color/colorTextLight</item>
    </style>

    <style name="Widget.Button.OutlinedButton.Small" parent="Widget.Button.OutlinedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:textAppearance">@style/TextAppearance.Button.Outline.Small</item>
        <item name="android:layout_marginStart">@dimen/horizontal_padding_large</item>
        <item name="android:layout_marginEnd">@dimen/horizontal_padding_large</item>
        <item name="android:textColor">@color/button_background_tint_state</item>
    </style>


    <style name="AppTheme.InputLayout.Text" parent="Theme.MaterialComponents.Light">
        <!-- Inactive underline color-->
        <item name="colorControlNormal">@color/colorTextLight</item>
        <!-- Cursor and Active underline color, uses colorAccent by default if not defined-->
        <item name="colorControlActivated">@color/colorTextDark</item>
    </style>

    <style name="AppTheme.InputLayout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox.Dense">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="hintTextAppearance">@style/TextAppearance.TextInput.Hint</item>
        <item name="boxBackgroundColor">@android:color/transparent</item>
        <item name="android:textColorHint">@color/colorTextDark</item>
        <item name="android:theme">@style/AppTheme.InputLayout.Text</item>
    </style>

    <style name="AppTheme.TextInputEditText" parent="Widget.MaterialComponents.TextInputEditText.FilledBox.Dense">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">@style/TextAppearance.TextInput.Text</item>
        <item name="android:textColor">@color/colorTextDark</item>
        <item name="android:paddingTop">12dp</item>
        // Remove padding in TextInputLayout
        <item name="android:paddingStart">0dp</item>
        <item name="android:paddingEnd">0dp</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:background">@drawable/edit_text_material_without_padding</item>
    </style>


    <style name="SpinnerTheme" parent="android:Widget.Spinner">
        <item name="android:background">@drawable/background_spinner</item>
        <item name="android:gravity">start</item>
    </style>

    <style name="Widget.TextInput.Status" parent="CoreAppTheme">
        <item name="android:layout_marginTop">14dp</item>
    </style>

    <style name="Widget.TextInput.Status.Icon" parent="CoreAppTheme">
        <item name="android:layout_width">18dp</item>
        <item name="android:layout_height">18dp</item>
    </style>

    <style name="Widget.Form.Input" parent="CoreAppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/horizontal_padding_large</item>
        <item name="android:layout_marginEnd">@dimen/horizontal_padding_large</item>
    </style>

    <style name="Widget.Button.Bottom" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">44dp</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:background">@drawable/background_bottom_button_state</item>
        <item name="android:elevation">0dp</item>
        <item name="android:textAppearance">@style/TextAppearance.Button.Bottom</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="cornerRadius">0dp</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:gravity">end|center_vertical</item>
    </style>

    <style name="Widget.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:layout_marginEnd">@dimen/horizontal_padding_medium</item>
        <item name="android:layout_marginStart">@dimen/horizontal_padding_medium</item>
        <item name="android:layout_marginBottom">@dimen/horizontal_padding_medium</item>
        <item name="android:elevation">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:backgroundTint">@color/button_background_tint_state</item>
        <item name="android:textAppearance">@style/TextAppearance.Button</item>
        <item name="cornerRadius">4dp</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="Widget.DividerTabLayout" parent="CoreAppTheme">
        <item name="tabBackground">@drawable/mode_switch_layout</item>
        <item name="tabGravity">center</item>
        <item name="tabIndicatorHeight">0dp</item>
        <item name="tabPaddingEnd">@dimen/horizontal_padding_large</item>
        <item name="tabPaddingStart">@dimen/horizontal_padding_large</item>
        <item name="tabSelectedTextColor">@color/colorTextDark</item>
        <item name="tabRippleColor">@null</item>
        <item name="tabTextAppearance">@style/TextAppearance.TabLayout.Text</item>
        <item name="tabTextColor">@color/colorTextDark</item>
        <item name="android:background">@color/colorTransparent</item>
        <item name="android:theme">@style/AppTheme.InputLayout.Text</item>
    </style>

    <style name="Widget.HomeTabLayout" parent="CoreAppTheme">
        <item name="android:layout_height">50dp</item>
        <item name="tabIndicatorHeight">0dp</item>
        <item name="android:background">@drawable/background_top_border</item>
        <item name="android:theme">@style/AppTheme.InputLayout.Text</item>
    </style>

    <style name="Widget.Welcome.Badge" parent="CoreAppTheme">
        <item name="android:padding">6dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:background">@drawable/background_welcome_badge</item>
        <item name="android:textAppearance">@style/TextAppearance.Welcome.Badge</item>
    </style>

    <style name="Navigation.Button.TextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textAppearance">@style/TextAppearance.BottomSheet.Button</item>
        <item name="android:layout_height">52dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="cornerRadius">0dp</item>
        <item name="android:insetBottom">0dp</item>
    </style>

</resources>
